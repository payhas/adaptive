<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Payhas.Adaptive.Avalonia.Sample"
             xmlns:adaptive="clr-namespace:Payhas.Adaptive;assembly=Payhas.Adaptive.Avalonia"
             x:Class="Payhas.Adaptive.Avalonia.Sample.App">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://Payhas.Adaptive.Avalonia/AdaptiveTheme.axaml" />
        <FluentTheme />
    </Application.Styles>
</Application>
